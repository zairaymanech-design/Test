import { ChartData } from 'chart.js';

export function getBarChartData(labels: string[], values: number[]): ChartData<'bar'> {
  return {
    labels: labels, // categories (e.g., product names)
    datasets: [{
      label: 'Sales',
      data: values, // actual numeric values for bar length
      backgroundColor: 'rgba(54, 162, 235, 0.7)',
      borderColor: 'rgba(54, 162, 235, 1)',
      borderWidth: 1
    }]
  };
}





import { ChartOptions } from 'chart.js';
import ChartDataLabels from 'chartjs-plugin-datalabels';

export function getHorizontalBarChartOptions(labels: string[], values: number[]): ChartOptions<'bar'> {
  return {
    indexAxis: 'y',             // horizontal bars
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      x: {
        display: false          // remove bottom axis completely
      },
      y: {
        title: { display: false },
        ticks: { font: { size: 14 } }  // category labels (on left)
      }
    },
    plugins: {
      legend: { display: false },
      title: {
        display: true,
        text: 'Horizontal Bar Chart (Label | Bar | Number)'
      },
      datalabels: {
        anchor: 'end',           // position at end of bar
        align: 'end',            // push number outside bar
        color: '#000',           // text color
        font: { weight: 'bold', size: 13 },
        formatter: (_, ctx) => values[ctx.dataIndex]  // show number at end of bar
      },
      tooltip: {
        enabled: true,
        callbacks: {
          label: (ctx) => `${labels[ctx.dataIndex]}: ${values[ctx.dataIndex]}`
        }
      }
    }
  };
}











import { ChartOptions } from 'chart.js';
import ChartDataLabels from 'chartjs-plugin-datalabels';

export function getBarChartOptions(labels: string[], values: number[]): ChartOptions<'bar'> {
  return {
    indexAxis: 'y', // horizontal
    responsive: true,
    maintainAspectRatio: false,
    scales: {
      x: {
        beginAtZero: true,
        grid: { display: false }
      },
      y: {
        title: {
          display: true,
          text: 'Values (on the left)'
        },
        ticks: {
          font: { size: 14 }
        }
      }
    },
    plugins: {
      legend: { display: false },
      title: {
        display: true,
        text: 'Horizontal Bar Chart (Numbers Left, Labels Inside)'
      },
      datalabels: {
        anchor: 'center',
        align: 'center',
        color: '#fff',
        font: {
          weight: 'bold',
          size: 13
        },
        formatter: (value, ctx) => labels[ctx.dataIndex] // label inside each bar
      },
      tooltip: {
        callbacks: {
          label: (ctx) => `${labels[ctx.dataIndex]}: ${values[ctx.dataIndex]}`
        }
      }
    }
  };
}



