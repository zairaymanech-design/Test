public boolean isUserInGroup(String userUid, String groupCn) {
    return ldapTemplate.search(
            query()
                    .base("ou=Users") // adjust as needed
                    .where("uid").is(userUid)
                    .and("memberOf").like("cn=" + groupCn + ",ou=Groups,dc=example,dc=com"),
            (attributes, name) -> name.toString()
    ).size() > 0;
}